---
import { Image } from 'astro:assets'
import avatar from '../assets/avatar.jpeg'
---

<header class="flex flex-row justify-between items-center gap-4 w-full">
    <div class="w-[200px]">
        <Image
            class="size-[8rem] mx-auto rounded-[4rem] object-cover group-hover/sheet:rounded-md group-hover:scale-125 transition-all duration-300"
            src={avatar} alt="Avatar" loading="eager"
        />
    </div>
    <div class="flex flex-col gap-2 w-[calc(100%-200px)]">
        <h1 class="text-5xl font-medium font-title text-gray-800 uppercase group-hover/sheet:tracking-widest transition-all duration-300">Marco Quinten</h1>
        <h2 class="pl-[4px] text-xl font-title text-gray-500 group-hover/sheet:tracking-wider transition-all duration-300">Full Stack Software Engineer</h2>
        <div class="h-[2px] bg-gray-300 w-full"></div>
    </div>
</header>
